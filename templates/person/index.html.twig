            <tr>        
                <td title="{{decorated[key].introduceMyself(person)}}">{{ person.name }}</td>
                <td>{{ person.age }}</td>
                <td>
                    <a href="{{ path('app_person_show', {'id': person.id}) }}">En savoir plus</a>
